# This Makefile is generated by omake: https://github.com/ouonline/omake.git

CXX := g++

ifeq ($(debug), y)
	CXXFLAGS += -g
else
	CXXFLAGS += -O2 -DNDEBUG
endif

TARGET := test_luacpp

.PHONY: all clean distclean

all: $(TARGET)

.PHONY: omake_phony_0
omake_phony_0:
	$(MAKE) debug=$(debug) libluacpp_static.a -C ..

omake_dep_0_INCLUDE := -I../../../../lua -I../..

omake_dep_0.test.cpp.o: test.cpp
	$(CXX) $(CXXFLAGS) -Wall -Werror -Wextra $(omake_dep_0_INCLUDE) -c $< -o $@

test_luacpp_OBJS := omake_dep_0.test.cpp.o

test_luacpp_LIBS := ../libluacpp_static.a ../../../../lua/src/liblua.a

test_luacpp: $(test_luacpp_OBJS) | omake_phony_0
	$(CXX) $(CXXFLAGS) -Wall -Werror -Wextra -o $@ $^ $(test_luacpp_LIBS)

clean:
	rm -f $(TARGET) $(test_luacpp_OBJS)

distclean:
	$(MAKE) clean
	$(MAKE) distclean -C ..
